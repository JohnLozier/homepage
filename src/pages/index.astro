---

import "~/styles/global.css";

import Clock from "~/components/clock";
import Copilot from "~/components/copilot/copilot";
import Greeting from "~/components/greeting";
import Background from "~/components/background";
import News from "~/components/news/news";
import Scores from "~/components/scores/scores";
import Search from "~/components/search";
import Settings from "~/components/settings";
import Stocks from "~/components/stocks/stocks";
import Weather from "~/components/weather";

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.ico" />
		<title>New Tab</title>
		<script async src="https://www.youtube.com/iframe_api" />
	</head>
	<body class="overflow-hidden h-screen w-screen bg-black">
		<Background client:only />
		<div class="flex gap-10 w-min right-10 top-5 absolute bottom-5 items-end flex-col">
			<Clock client:load />
			<div class="flex gap-y-10 items-end flex-col">
				<Stocks client:load />
				<Weather client:load />
			</div>
		</div>
		<Copilot client:idle />
		<Greeting client:load />
		<div class="absolute flex-col flex items-center focus-within:h-[max(calc(33.3333%+8rem),35rem)] transition-[top,height] duration-500 justify-stretch gap-y-3 w-1/3 h-[max(33.3333%,27rem)] bottom-0 min-w-[50rem] ml-[50%] -translate-x-1/2">
			<Search client:load />
			<News client:idle />
		</div>
		<Scores client:load />
		<Settings client:idle />
	</body>
</html>